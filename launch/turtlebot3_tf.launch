<!--
滚转角（roll）是绕X轴旋转，俯仰角（pitch）是绕Y轴旋转，偏航角（yaw）是绕Z轴旋转
-->
<launch>
  <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="x_pos" default="0"/>
  <arg name="y_pos" default="-4"/>
  <arg name="z_pos" default="0.0"/>
  <arg name="burger_roll" value="0.0"/>
  <arg name="burger_pitch" value="0.0"/>
  <arg name="burger_yaw" value="1.57"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="/home/hhd/PycharmProjects/catkin_ws/src/CrowdNavRL/world/turtlebot3_tf_v3.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3_waffle -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -R $(arg burger_roll) -P $(arg burger_pitch) -Y $(arg burger_yaw) -param robot_description" />
</launch>
