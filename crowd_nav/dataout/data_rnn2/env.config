
[env]
time_limit = 25
time_step = 0.25
val_size = 100
test_size = 500
randomize_attributes = false
ros_visualize=true
multiagent_training=true
group_human=false
random_radii = false
random_v_pref = false
% configure randomized goal changing of humans midway through episode
random_goal_changing=true
goal_change_chance=0.25
end_goal_changing=true
end_goal_change_chance=1

[reward]
success_reward = 100
collision_penalty = -10
discomfort_dist = 0.25
discomfort_penalty_factor = 10


[sim]
train_val_sim = circle_crossing
test_sim = circle_crossing
%test_sim = mixed

square_width = 10
circle_radius = 4
human_num = 5


[humans]
visible = true
policy = orca
radius = 0.4
v_pref = 1
sensor = coordinates


[robot]
visible = false
policy = none
radius = 0.4
v_pref = 1
sensor = coordinates
scan_radius = 2.5