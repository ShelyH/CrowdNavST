[env]
time_limit = 21
time_step = 0.25
val_size = 100
test_size = 500
randomize_attributes = false
ros_visualize=true
multiagent_training=true
group_human=false
random_radii = false
random_v_pref = false

random_goal_changing=true
goal_change_chance=0.25
end_goal_changing=true
end_goal_change_chance=1

[reward]
success_reward = 100
collision_penalty = -30
discomfort_dist = 0.3
discomfort_penalty_factor = 10

[reward!]
success_reward = 1
collision_penalty = -0.25
discomfort_dist = 0.25
discomfort_penalty_factor = 1

[sim]
% train_val_sim=mixed
train_val_sim = circle_crossing
test_sim = circle_crossing
% test_sim = mixed

square_width = 9
circle_radius = 4
human_num = 5


[humans]
visible = true
% policy to control the humans: orca or social_force
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates

[robot]
visible = false
policy = none
radius = 0.3
v_pref = 1
sensor = coordinates
scan_radius = 2.5
